# Dolby Service definitions
allow platform_app hal_dms_hwservice:hwservice_manager find;
binder_call(platform_app, hal_dms_default)

# AICP QS Header System UI Info
allow platform_app sysfs_thermal:dir { search };
allow platform_app sysfs_thermal:file r_file_perms;

allow platform_app sysfs_info:dir { search };
allow platform_app sysfs_info:lnk_file { read };
allow platform_app sysfs_info:file { open read };

#AICP PartsBin Touch screen game mode
allow platform_app proc_touchpanel:dir r_dir_perms;
allow platform_app proc_touchpanel:file rw_file_perms;

#Gaming Mode FPS info service
allow platform_app vendor_sysfs_graphics:file r_file_perms;

#Op Camera rules
allow platform_app vendor_sysfs_kgsl:file { getattr open read };
allow platform_app vendor_xdsp_device:chr_file { ioctl read getattr lock map open };
allow platform_app vendor_sysfs_battery_supply:dir search;
allow platform_app vendor_sysfs_battery_supply:file { read open getattr };
allow platform_app adsprpcd_file:dir { search getattr read };
dontaudit platform_app mnt_vendor_file:dir search;
dontaudit platform_app vendor_hal_camera_postproc_hwservice:hwservice_manager find;

get_prop(platform_app, ctl_default_prop)
allow platform_app vendor_camera_data_file:dir getattr;
binder_call(platform_app, hal_camera_default)
r_dir_file(platform_app, oem_file)
